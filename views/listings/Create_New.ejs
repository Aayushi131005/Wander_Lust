<%layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <br><br>
        <h3>Create a new List</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
    <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input name="title" class="form-control" placeholder="Enter your catchy title" required>
        <div class="valid-feedback">Looks Good!</div>
    </div>
    <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea name="description" placeholder="Enter your description" required>
            
        </textarea>
        <div class="invalid-feedback">Please enter a short description</div>
    </div>
    
        <div  class="mb-3" >
            <lable for="image" class="form-label">Image URL </lable>
            <input name="image" class="form-control" placeholder="Enter the url">
        </div>
       
       <div class="row ">
        <div class="mb-3 col-md-4" >
            <lable for="price" class="form-label">Price</lable>
            <input  class="form-control" name="price" placeholder="1200">
            <div class="invalid-feedback">Please enter a valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input name="country" class="form-control" placeholder="India" required>
                <div class="invalid-feedback">Please enter a valid country</div>
            </div>
       </div>
        
        <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input name="location" class="form-control" placeholder="Jaipur,Rajasthan" required>
        <div class="invalid-feedback">Please enter a valid location</div>
    </div>
    <br>
    <br>
        <button class="btn btn-dark add-btn">Add</button>

    </form>
</div>
</div>

