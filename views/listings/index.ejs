<%layout("/layouts/boilerplate") %>

<body>
   <h1>All listings</h1>
   <!--<form method="GET" action="/listings/new"><button>Create New</button></form>-->
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" >
    <%for(let list of all_list ){%>
      <a href="/listings/<%=list._id%>" class="listing-link">
        <div class="card col listing-card" >
         <img src="<%=list.image%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
         <div class="card-img-overlay"></div>
         <div class="card-body">
           <p class="card-text">
            <b> <%=list.title%></b><br>
            &#8377;
             <%=list.price%>/night
     
             </p>
         </div>
       </div>
      </a>
       <%}%>
   </div>
   
  
</body>

