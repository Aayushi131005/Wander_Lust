<%layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
    <h3><%=info.title%>:</h3>
    <div class="card col-6 show-card">
        <img src="<%=info.image%>" class="card-img-top show-img" alt="listing-image">
        <div class="card-body">
            <p class="card-text">
                <ul>
                   
                    <li><%=info.description%></li>
                    <li>&#8377;<%=info.price%></li>
                    <li><%=info.location%></li>
                    <li><%=info.country%></li>
                </ul>
            </p>
          </div>
    </div>
   <br>
   <div class="btns">
    <a href="/listings/<%=info._id%>/Edit" class="btn btn-dark col-1 offset-2 edit-btn">Edit</a>

        <form method="POST" action="/listings/<%=info._id%>?_method=DELETE"><button class="btn btn-dark offset-4">Delete</button></form>
    </div>
    </div>
    <div class="col-8 offset-3"></div>
    <br><br>
    <form action="/listings/<%=info._id%>/reviews" method="POST" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
        <h4>Leave a review</h4>
        <div>
            <lable for="rating" class="form-label">Rating</lable>
            <input type="range" min="1" max="5" id="rating" name="rating">
        </div>
        <div>
            <lable for="comment" class="form-label">Comments</lable>
            <textarea name="comment" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
    </div>
</form>
<hr>
<h4>All Reviews</h4>
<div class="row">

<%for(review of info.reviews) {%>
    <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
            <h5 class="card-title">Aayushi Gupta</h5>
            <p class="card-text"><%=review.comment%></p>
          
            <p class="card-text"><%=review.rating%>stars</p>
        </div> 
        <form class="mb-3" method="POST" action="/listings/<%=info._id%>/reviews/<%=review._id%>?_method=DELETE">
            <button class="btn btn-sm btn-dark">Delete</button>
        </form>
    </div> 
            <%}%>
 
</div>



</div>
</div>

    
</body>
